{% extends 'base.html.twig' %}

{% block title %}Nuevo blog{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}        
        {{ form_row(form.body) }}
        {{ form_row(form.image) }}
        

        <button type="submit" class="btn">Register</button>
    {{ form_end(form) }}
{% endblock %}
